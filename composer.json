{
  "name": "huehue/pgn-parser",
  "description": "Parse PGN files",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "HueHue",
      "email": "dev@web-hl.de"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "HueHue\\PgnParser\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "pestphp/pest": "^3.8",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "test": "./vendor/bin/pest",
    "test-coverage": "./vendor/bin/pest --coverage --min=90",
    "herd-test-coverage": "herd coverage ./vendor/bin/pest --coverage --min=90",
    "test-ci": "./vendor/bin/pest --ci",
    "cs-fix": "./vendor/bin/php-cs-fixer fix",
    "cs-fix-validate": "./vendor/bin/php-cs-fixer fix --dry-run --diff"

  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
